<h2>Update the drone</h2>

<form method="POST" action="/drones/{{drone.id}}/edit">
  <div class="mb-3">
    <label class="form-label" >name</label>
    <input class="form-control"  value="{{drone.name}}" type="text" name="name">
    <br>
    <label class="form-label" >propellers</label>
    <input class="form-control" type="number" name="propellers" value="{{drone.propellers}}">
    <br>
    <label class="form-label" >maxSpeed</label>
    <input class="form-control"  value="{{drone.maxSpeed}}" type="number" name="maxSpeed">
    <br>
    <button class="btn btn-primary" type="submit">SUBMIT</button>
  </div>
</form>