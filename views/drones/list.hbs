<h2>Available drones</h2>

<div>
    {{#each drones}}
        <h4>Drone: {{this.name}}</h4>
        <h6>{{this.propellers}}</h6>
        <p>{{this.maxSpeed}}</p>
        <form action="/drones/{{this._id}}/edit" method="GET">
            <button type="submit" class="btn btn-warning">Edit</button>
        </form>
        <form action="/drones/{{this._id}}/delete" method="GET">
            <button type="submit" class="btn btn-warning">Delete</button>
        </form>
    {{/each}}
</div>